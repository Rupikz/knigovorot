{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "plugins": ["prettier", "vue"],
  "settings": {
    "html/html-extensions": [".html"]
  },
  "globals": {
    "axios": true,
    "elastic": true
  },
  "extends": ["eslint:recommended", "plugin:vue/recommended"],
  "rules": {
    "vue/max-attributes-per-line": 0,
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "never",
          "normal": "always",
          "component": "always"
        },
        "svg": "always",
        "math": "always"
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  }
}
