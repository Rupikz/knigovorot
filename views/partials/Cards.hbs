<div class="row">
  {{#if this}}
    {{#each this}}
      {{#with this}}
        <div class="col l3 m4 s6">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="images/books/{{ id_image_book }}">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                {{ name_book }}
              </span>
              <span class="card-writer activator grey-text text-darken-2">
                {{ author_book }}
              </span>
              <p><span class="сard-price">{{ price }}</span> руб.</p>
            </div>
          </div>
        </div>
      {{/with}}
    {{/each}}
  {{else}}
    <h4 class="default">Книг нет</h4>
  {{/if}}
</div>
